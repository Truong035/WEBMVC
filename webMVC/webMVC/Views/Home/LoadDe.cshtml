@model webMVC.Models.Bo_De
@{
    ViewBag.Title = "LoadDe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class=" container-fluid card">

    <div class="card">

        <div class="card mb-4">
            @{
                <div class="card-body">
                    Mã Đề : @Model.Ma_BoDe;

                </div>
                <div class="card-body">
                    Tên Đề : @Model.NoiDung;
                </div>
                <div class="card-body">
                    Thời Gian : @Model.ThoiGianThi Phút;
                </div>
                <div class="card-body">
                    Người Tạo : @Model.TaiKhoan.TenDangNhap;
                </div>
                <div class="dropdown-divider"></div>
                int i = 0;
                foreach (var item in Model.CauHois)
                {
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <h5 style="width:710px;"> Câu @(i=i+1) :  @item.Kho_CauHoi.NoiDung </h5>

                                @{
                                    try
                                    {
                                        if (item.Kho_CauHoi.HinhAnh.Length > 0)
                                        {
                                            <div class="card-body ">
                                                <img class=" center-block" style="margin-left:250px" src="@item.Kho_CauHoi.HinhAnh"
                                                     alt="anh viet nam anh 1 " width="300px" height="200px" />
                                            </div>

                                        }

                                    }
                                    catch { }

                                }


                            </div>
                            @foreach (var item1 in item.Kho_CauHoi.Dap_AN)
                            {
                                <div class="form-group">
                                    @{ try
                                        {
                                            if (item1.HinhAnh.Length > 0)
                                            {
                                                <img class=" center-block" style="margin-left:80px" src="@item1.HinhAnh"
                                                     alt="anh viet nam anh 1 " width="150px" />

                                            }
                                        }
                                        catch { }
                                    }


                                    <div class="custom-control custom-radio">

                                        @if (item1.TrangThai == true)
                                        {
                                            <label class="custom-control-inline" style="width:700px;color:orangered " for="@item1.MA_DAN">
                                                @item1.NoiDung
                                            </label>
                                        }
                                        else
                                        {
                                            <label class="custom-control-inline" style="width:700px" for="@item1.MA_DAN">
                                                @item1.NoiDung
                                            </label>
                                        }



                                    </div>
                                </div>
                            }

                        </form>
                    </div>

                    <div class="dropdown-divider"></div>
                }
                if (Model.CauHois.Count > 0)
                {

                    try
                    {
                        <div class="card-body">
                            <a class=" btn btn-danger " href="/Home/DSDeOn"> Quay Lại </a>
                            <a class=" btn btn-success" href="@Model.LinkTai"> Xuất PDF </a>
                        </div>
                    }
                    catch
                    {

                    }


                }

            }
        </div>


    </div>


