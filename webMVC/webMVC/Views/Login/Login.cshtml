@model webMVC.Models.TaiKhoan
<html lang="zxx">
<head>
    <title>Login</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <meta name="keywords" content="Report Login Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design">
    <!-- //Meta tag Keywords -->    <link href="//fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;900&amp;display=swap" rel="stylesheet">
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css" type="text/css" media="all">
    <!--//Style-CSS -->
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css" type="text/css" media="all">
</head>
<body>
   
    <!-- form section start -->
    <section class="w3l-hotair-form">
        <h1>Đăng nhập</h1>
        <div class="container">
            <!-- /form -->
            <div class="workinghny-form-grid">
                <div class="main-hotair">
            
                    <div class="content-wthree">
                        @using (Html.BeginForm("DangNhap", "Login", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <h2>Đăng nhập</h2>
                            @Html.TextBoxFor(model => model.TaiKhoan1, new { @class = "email", @autofocus = "autofocus", placeholder = "Enter Email" })
                            @Html.ValidationMessageFor(model => model.TaiKhoan1, "", new { @class = "text-danger" })

                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "password", type = "password", placeholder = "Enter assword" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <button class="btn" id="vao" type="submit">Đăng nhập</button>
                        }
                    <div class="container" style="text-align:center">
                        <a class="btn card-link nav-link " href="/Login/QuenTk">Quên mật khẩu</a> ||
                        <a class="btn card-link nav-link" href="/Login/TaoTK" >Tạo Tài Khoản</a>
                    </div>
                          
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="~/assets/images/1.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
            <!-- //form -->
        </div>      
    </section>
   

    <!-- //form section start -->
</body>
</html>
